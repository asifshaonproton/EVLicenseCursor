<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:id="@+id/editLicenseContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Section 1: Personal Info -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Info"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/editTextHolderName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Holder Name" />

        <EditText
            android:id="@+id/editTextMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Section 2: License Details -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="License Details"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/prompt_city" />

        <Spinner
            android:id="@+id/spinnerLicenseType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/prompt_license_type" />

        <EditText
            android:id="@+id/editTextLicenseNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="License Number" />

        <EditText
            android:id="@+id/editTextNfcCardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NFC / RFID Card Number" />

        <EditText
            android:id="@+id/editTextValidityDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Validity Date"
            android:focusable="false"
            android:clickable="true" />

        <Button
            android:id="@+id/buttonSaveLicense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:backgroundTint="@color/ev_blue"
            android:textColor="@color/colorOnPrimary"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView> 